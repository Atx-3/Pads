    <!-- JAVASCRIPT for Gemini AI Assistant -->
    <script>
        // --- Modal Elements and Functions ---
        const errorModal = document.getElementById('errorModal');
        const errorMessage = document.getElementById('errorMessage');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const modalOkBtn = document.getElementById('modalOkBtn');

        function showErrorModal(message) {
            errorMessage.textContent = message || 'An unknown error occurred. Please try again.';
            errorModal.classList.remove('hidden');
        }

        function hideErrorModal() {
            errorModal.classList.add('hidden');
        }

        closeModalBtn.addEventListener('click', hideErrorModal);
        modalOkBtn.addEventListener('click', hideErrorModal);

        // --- AI Assistant Elements ---
        const generateBtn = document.getElementById('generateCopyBtn');
        const btnText = document.getElementById('generateBtnText');
        const spinner = document.getElementById('loadingSpinner');
        const brandNameInput = document.getElementById('brandName');
        const keyMessageInput = document.getElementById('keyMessage');
        const copyResult = document.getElementById('copyResult');

        // --- API Call Logic ---
        const apiKey = ""; // API key will be injected by the environment
        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

        // System prompt to guide the AI
        const systemPrompt = `You are an expert copywriter specializing in purpose-driven marketing. Your task is to generate 3 short, impactful ad copy variations for a sanitary pad wrapper. The copy must be concise (max 10-15 words), respectful, empathetic, and align with the brand's key message. The ad is seen in a private, distraction-free moment, so the tone should be supportive and positive. Format the output as a simple list with "1.", "2.", "3.".`;

        async function callGeminiAPI(brandName, keyMessage) {
            const userQuery = `Generate ad copy for a brand called "${brandName}" whose key message is "${keyMessage}".`;
            
            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: {
                    parts: [{ text: systemPrompt }]
                },
            };

            let response;
            let retries = 3;
            let delay = 1000; // 1 second

            for (let i = 0; i < retries; i++) {
                try {
                    response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (response.ok) {
                        const result = await response.json();
                        const candidate = result.candidates?.[0];
                        if (candidate && candidate.content?.parts?.[0]?.text) {
                            return candidate.content.parts[0].text;
                        } else {
                            throw new Error('Invalid response structure from API.');
                        }
                    } else if (response.status === 429 || response.status >= 500) {
                        // Throttling or server error, wait and retry
                        if (i === retries - 1) {
                            // Last retry failed
                            throw new Error(`API error after ${retries} attempts. Status: ${response.status}`);
                        }
                        await new Promise(resolve => setTimeout(resolve, delay));
                        delay *= 2; // Exponential backoff
                    } else {
                        // Other client-side error (e.g., 400 Bad Request)
                        const errorResult = await response.json();
                        const errorDetails = errorResult.error?.message || `HTTP error! Status: ${response.status}`;
                        throw new Error(errorDetails);
                    }
                } catch (error) {
                    // Network error or fetch failure
                    if (i === retries - 1) {
                        throw new Error(`Failed to fetch from API after ${retries} attempts. ${error.message}`);
                    }
                    await new Promise(resolve => setTimeout(resolve, delay));
                    delay *= 2;
                }
            }
        }

        // --- Button Click Event ---
        generateBtn.addEventListener('click', async () => {
            const brandName = brandNameInput.value;
            const keyMessage = keyMessageInput.value;

            if (!brandName || !keyMessage) {
                showErrorModal('Please fill in both the brand name and the key message.');
                return;
            }

            // Set loading state
            generateBtn.disabled = true;
            btnText.textContent = 'Generating...';
            spinner.classList.remove('hidden');
            copyResult.textContent = 'Thinking...';

            try {
                const resultText = await callGeminiAPI(brandName, keyMessage);
                copyResult.textContent = resultText.trim();
            } catch (error) {
                console.error('Gemini API call failed:', error);
                showErrorModal(`Error: ${error.message}`);
                copyResult.textContent = 'Your copy suggestions will appear here...'; // Reset placeholder
            } finally {
                // Reset button state
                generateBtn.disabled = false;
                btnText.textContent = 'Generate Ideas';
                spinner.classList.add('hidden');
            }
        });

    </script>

